---
interface Props {
	title: string;
}

const { title } = Astro.props;

import ImageIcon from '../images/icons/icon-web.svg'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Felipe Fidalgo - Front End Developer</title>
		<meta name="title" content="Felipe Fidalgo - Front End Developer" />
		<meta name="description" content="This is my personal portfolio, I hope you like it :) " />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://zoroskr.github.io/portfolio" />
		<meta property="og:title" content="Felipe Fidalgo - Front End Developer" />
		<meta property="og:description" content="This is my personal portfolio, I hope you like it :) " />
		<meta property="og:image" content={ImageIcon.src}  />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://zoroskr.github.io/portfolio/" />
		<meta property="twitter:title" content="Felipe Fidalgo - Front End Developer" />
		<meta property="twitter:description" content="This is my personal portfolio, I hope you like it :) " />
		<meta property="twitter:image" content={ImageIcon.src}  />
		<link rel="icon" href={ImageIcon.src} />
	</head>

	<body class="lg:h-screen lg:w-screen flex justify-center items-center">
			<div class="h-5/6 max-w-screen-2xl gap-6 flex flex-col lg:grid lg:grid-rows-3 lg:grid-cols-3">
				<slot/>
			</div>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>

</html>
<style is:global>
	:root {
    	color-scheme: dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>
