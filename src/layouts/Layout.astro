---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="lg:h-screen lg:w-screen flex justify-center items-center">
			<div class="h-5/6 max-w-screen-2xl gap-6 flex flex-col lg:grid lg:grid-rows-3 lg:grid-cols-3">
				<slot/>
			</div>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>

</html>
<style is:global>
	:root {
    	color-scheme: dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>
